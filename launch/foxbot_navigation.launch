<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find foxbot_ros)/maps/losserand_v4_2_num_accumulated_range_data_3.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find foxbot_ros)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find foxbot_ros)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

<!--
<node pkg="tf" type="static_transform_publisher" name="tsssst" args="0 0 0 0 0 0 map odom 50" />


<node pkg="tf" type="static_transform_publisher" name="tst" args="0 0 0 0 0 0 odom base_footprint 50" />
-->

<node pkg="tf" type="static_transform_publisher" name="tt" args="0 0 0 3.1416 0 0 base_footprint base_link 50" />


<node pkg="tf" type="static_transform_publisher" name="tsst" args="0 0 0 0 0 0 base_link base_scan 50" />


  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/>
  </group>
</launch>
